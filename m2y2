import telebot
import random

bot = telebot.TeleBot("write your token")

@bot.message_handler(commands=['start'])
def start(message):
    bot.send_message(
        message.chat.id,
        "üåç –ü—Ä–∏–≤–µ—Ç! –Ø —ç–∫–æ–ª–æ–≥–∏—á–µ—Å–∫–∏–π –±–æ—Ç.\n"
        "–ù–∞–ø–∏—à–∏ /help, —á—Ç–æ–±—ã —É–≤–∏–¥–µ—Ç—å –∫–æ–º–∞–Ω–¥—ã."
    )

@bot.message_handler(commands=['help'])
def help_cmd(message):
    bot.send_message(
        message.chat.id,
        "üìñ –ö–æ–º–∞–Ω–¥—ã –±–æ—Ç–∞:\n\n"
        "/eco ‚Äî —á—Ç–æ —Ç–∞–∫–æ–µ —ç–∫–æ–ª–æ–≥–∏—è\n"
        "/do ‚Äî —á—Ç–æ –ù–£–ñ–ù–û –¥–µ–ª–∞—Ç—å\n"
        "/dont ‚Äî —á—Ç–æ –ù–ï–õ–¨–ó–Ø –¥–µ–ª–∞—Ç—å\n"
        "/facts ‚Äî —Å–ª—É—á–∞–π–Ω—ã–π —Ñ–∞–∫—Ç\n"
        "/tips ‚Äî —Å–ª—É—á–∞–π–Ω—ã–π —ç–∫–æ-—Å–æ–≤–µ—Ç"
    )

@bot.message_handler(commands=['eco'])
def eco(message):
    bot.send_message(
        message.chat.id,
        "üå± –≠–∫–æ–ª–æ–≥–∏—è ‚Äî —ç—Ç–æ –Ω–∞—É–∫–∞ –æ –≤–∑–∞–∏–º–æ–¥–µ–π—Å—Ç–≤–∏–∏ "
        "—á–µ–ª–æ–≤–µ–∫–∞, –ø—Ä–∏—Ä–æ–¥—ã –∏ –æ–∫—Ä—É–∂–∞—é—â–µ–π —Å—Ä–µ–¥—ã."
    )

# ---------- –†–ê–ù–î–û–ú: –ß–¢–û –ù–£–ñ–ù–û –î–ï–õ–ê–¢–¨ ----------
do_list = [
    "‚ôªÔ∏è –°–æ—Ä—Ç–∏—Ä—É–π –º—É—Å–æ—Ä",
    "üíß –≠–∫–æ–Ω–æ–º—å –≤–æ–¥—É",
    "üí° –í—ã–∫–ª—é—á–∞–π —Å–≤–µ—Ç",
    "üõç –ò—Å–ø–æ–ª—å–∑—É–π –º–Ω–æ–≥–æ—Ä–∞–∑–æ–≤—ã–µ —Å—É–º–∫–∏",
    "üö∂ –•–æ–¥–∏ –ø–µ—à–∫–æ–º –∏–ª–∏ –Ω–∞ –≤–µ–ª–æ—Å–∏–ø–µ–¥–µ"
]

@bot.message_handler(commands=['do'])
def do(message):
    bot.send_message(message.chat.id, random.choice(do_list))


# ---------- –†–ê–ù–î–û–ú: –ß–¢–û –ù–ï–õ–¨–ó–Ø –î–ï–õ–ê–¢–¨ ----------
dont_list = [
    "‚ùå –ù–µ –≤—ã–±—Ä–∞—Å—ã–≤–∞–π –º—É—Å–æ—Ä –≤ –ø—Ä–∏—Ä–æ–¥—É",
    "‚ùå –ù–µ —Å–∂–∏–≥–∞–π –ø–ª–∞—Å—Ç–∏–∫",
    "‚ùå –ù–µ –∑–∞–≥—Ä—è–∑–Ω—è–π –≤–æ–¥–æ—ë–º—ã",
    "‚ùå –ù–µ –ª–æ–º–∞–π –¥–µ—Ä–µ–≤—å—è",
    "‚ùå –ù–µ –æ—Å—Ç–∞–≤–ª—è–π –º—É—Å–æ—Ä –ø–æ—Å–ª–µ –æ—Ç–¥—ã—Ö–∞"
]

@bot.message_handler(commands=['dont'])
def dont(message):
    bot.send_message(message.chat.id, random.choice(dont_list))


# ---------- –†–ê–ù–î–û–ú–ù–´–ï –§–ê–ö–¢–´ ----------
facts_list = [
    "üìå –ü–ª–∞—Å—Ç–∏–∫ —Ä–∞–∑–ª–∞–≥–∞–µ—Ç—Å—è –±–æ–ª–µ–µ 400 –ª–µ—Ç",
    "üìå –û–¥–∏–Ω —á–µ–ª–æ–≤–µ–∫ –≤ –≥–æ–¥ –≤—ã–±—Ä–∞—Å—ã–≤–∞–µ—Ç –æ–∫–æ–ª–æ 300 –∫–≥ –º—É—Å–æ—Ä–∞",
    "üìå –õ–µ—Å–∞ –ø—Ä–æ–∏–∑–≤–æ–¥—è—Ç –æ–∫–æ–ª–æ 30% –∫–∏—Å–ª–æ—Ä–æ–¥–∞ –Ω–∞ –ó–µ–º–ª–µ",
    "üìå –ó–∞–≥—Ä—è–∑–Ω–µ–Ω–∏–µ –≤–æ–∑–¥—É—Ö–∞ –≤–ª–∏—è–µ—Ç –Ω–∞ –∑–¥–æ—Ä–æ–≤—å–µ –ª—é–¥–µ–π",
    "üìå –ë—É–º–∞–≥—É –º–æ–∂–Ω–æ –ø–µ—Ä–µ—Ä–∞–±–æ—Ç–∞—Ç—å –¥–æ 7 —Ä–∞–∑"
]

@bot.message_handler(commands=['facts'])
def facts(message):
    bot.send_message(message.chat.id, random.choice(facts_list))


# ---------- –†–ê–ù–î–û–ú–ù–´–ï –°–û–í–ï–¢–´ ----------
tips_list = [
    "üí° –ò—Å–ø–æ–ª—å–∑—É–π –±—É—Ç—ã–ª–∫—É –¥–ª—è –≤–æ–¥—ã –ø–æ–≤—Ç–æ—Ä–Ω–æ",
    "üí° –û—Ç–∫–∞–∂–∏—Å—å –æ—Ç –æ–¥–Ω–æ—Ä–∞–∑–æ–≤–æ–π –ø–æ—Å—É–¥—ã",
    "üí° –°–¥–∞–≤–∞–π –±–∞—Ç–∞—Ä–µ–π–∫–∏ –≤ —Å–ø–µ—Ü–∏–∞–ª—å–Ω—ã–µ –ø—É–Ω–∫—Ç—ã",
    "üí° –ü–æ–∫—É–ø–∞–π —Ç–æ–≤–∞—Ä—ã –±–µ–∑ –ª–∏—à–Ω–µ–π —É–ø–∞–∫–æ–≤–∫–∏",
    "üí° –ü–æ—Å–∞–¥–∏ –¥–µ—Ä–µ–≤–æ"
]

@bot.message_handler(commands=['tips'])
def tips(message):
    bot.send_message(message.chat.id, random.choice(tips_list))


bot.polling()
